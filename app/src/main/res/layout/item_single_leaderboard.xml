<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewRank"
        android:src="@drawable/gold"
        android:layout_marginStart="@dimen/dimen_16_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/dimen_30_dp"
        android:layout_height="@dimen/dimen_30_dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImageViewHolder"
        app:cardCornerRadius="@dimen/dimen_4_dp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewRank"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="@dimen/dimen_24_dp"
        android:layout_marginLeft="@dimen/dimen_16_dp"
        android:layout_width="@dimen/dimen_60_dp"
        android:layout_height="@dimen/dimen_50_dp" >
        <ImageView
            android:id="@+id/imageViewTeam"
            android:src="@drawable/mi"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTeamName"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16_dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/text_14_sp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cardImageViewHolder"
        app:layout_constraintRight_toRightOf="parent"
         />

    <View
        android:id="@+id/divider"
        android:background="@color/divider_light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dimen_36_dp"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="@dimen/dimen_2_dp" />

</androidx.constraintlayout.widget.ConstraintLayout>